<%- include('includes/head.ejs', {username:username}) %>

<body>
<section class="section">
<h2 class="title center-text">Tus Gatos</h2> <br>
<div class="columns">
    
<% for (let gato of gatos) { %>
    <div class="column">
        <div class="card">
            <div class="card-image">
            <figure class="image is-4by3">
                <img src="<%= gato.imagen %>" alt="Imagen de <%= gato.nombre %>">
            </figure>
            </div>
            <div class="card-content">
            <div class="media">
                <div class="media-content">
                    <p class="title is-4 center-text">
                        <span class="has-background-warning margen"><%= gato.nombre %></span>
                    </p>
                </div>
            </div>
            <div class="content center-text">
               NIVEL: <span class="has-text-weight-bold"><%= gato.nivel %></span> <br>
            </div>
            </div>
        </div>
    </div>
<% } %>

</div>
<% if(ultimo_gato != '') { %>
    <div>El Ãºltimo gato creado fue <%= ultimo_gato %>.</div>
<% } %>


</section>  
</body>